<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="com.florianingerl.javacodedcompletionproposals.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="com.florianingerl.javacodedcompletionproposals.commands.category"
            id="com.florianingerl.javacodedcompletionproposals.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.florianingerl.javacodedcompletionproposals.commands.sampleCommand"
            class="com.florianingerl.javacodedcompletionproposals.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.florianingerl.javacodedcompletionproposals.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="com.florianingerl.javacodedcompletionproposals.menus.sampleMenu">
            <command
                  commandId="com.florianingerl.javacodedcompletionproposals.commands.sampleCommand"
                  mnemonic="S"
                  id="com.florianingerl.javacodedcompletionproposals.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.florianingerl.javacodedcompletionproposals.toolbars.sampleToolbar">
            <command
                  commandId="com.florianingerl.javacodedcompletionproposals.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="com.florianingerl.javacodedcompletionproposals.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
   <extension point="org.eclipse.jdt.ui.javaCompletionProposalComputer"
   id="javacodedcompletionproposalcomputer"
   name="Java-coded completion proposal computer">
   <javaCompletionProposalComputer
      class="com.florianingerl.javacodedcompletionproposals.JavaCodedTemplateCompletionProposalComputer"
      activate="true">
      
   </javaCompletionProposalComputer>
 </extension>
 
  <extension
      point = "org.eclipse.ui.preferencePages">
       <page id="com.florianingerl.javacodedcompletionproposals.javacodedtemplatepreferencepage"
	    class="com.florianingerl.javacodedcompletionproposals.preferencepages.JavaCodedTemplatePreferencePage"
            name="Java-coded templates">
       </page>
   </extension>
   

</plugin>
